{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlerts",
    "mergeConfidence:all-badges"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "alpine",
        "github.com/yuin/goldmark"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": [
        "github.com/StackExchange/dnscontrol/v[0-9]+"
      ],
      "enabled": false
    }
  ]
}
